@model Library.Models.CreateOrderViewModel

@{
    ViewData["Title"] = "Wypożycz";
}

<h1>Wypożycz</h1>

<div>
    <h2>Wybrana książka</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Year)
        </dd>
    </dl>
    <hr />
    <h2>Wybór ucznia</h2>
    <form asp-action="Create" method="post">
        <input name="bookId" type="hidden" value="@Model.Book.Id" />
        <div class="row">
            <div class="col-6">
                <select class="form-select" name="studentId" asp-items="@Model.Students.Select(s => new SelectListItem($"{s.LastName} {s.FirstName}", s.Id.ToString())).ToList()">
                    <option>--- Wybierz ucznia ---</option>
                </select>
            </div>
            <div class="col-6">
                <input class="btn btn-success" type="submit" value="Wypożycz" />
            </div>
        </div>
    </form>
</div>
<div>
    <a asp-controller="Books" asp-action="Index">Powrót</a>
</div>
